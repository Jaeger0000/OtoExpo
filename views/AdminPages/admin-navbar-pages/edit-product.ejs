<%- include('../../includes/head'); %>
    <link rel="stylesheet" href="/css/navBarCss.css">
    <link rel="stylesheet" href="/css/userSetting.css">
    <link rel="stylesheet" href="/css/edit-product.css">

    </head>

    <body>
        <%- include('../../includes/nav-bar'); %>
        <%- include('./includes/user-navbar'); %>   
        <main>
            <div class="container-addproduct">
                <h1 class="h1-addproduct">Edit Product</h1>
               
                <form class="form-addproduct" action="/edit-product/admin" method="POST">
                    <div class="form-group-addproduct">
                        <label for="name">Title:</label>
                        <input class="inp-addproduct" type="text" id="name" name="name" value="<%= product.name %>" required>
                    </div>
                    <div class="form-group-addproduct">
                        <label class="label-addproduct" for="make">Make:</label>
                        <input class="inp-addproduct" type="text" id="make" name="car_marka" value="<%= product.marka %>" required>
                    </div>
                    
                    <div class="form-group-addproduct">
                        <label for="model">Model:</label>
                        <input class="inp-addproduct" type="text" id="model" name="car_model" value="<%= product.model %>" required>
                    </div>
                    <div class="form-group-addproduct">
                        <label for="year">Year:</label>
                        <input class="inp-addproduct" type="number" id="year" name="year" min="1900" max="2099" value="<%= product.production_year %>" required>
                    </div>
                    <div class="form-group-addproduct">
                        <label for="kilometer">Kilometer (km):</label>
                        <input class="inp-addproduct" type="number" id="kilometer" name="kilometer" value="<%= product.kilometer %>" required>
                    </div>
                    <div class="form-group-addproduct">
                        <label for="price">Price($):</label>
                        <input class="inp-addproduct" type="number" id="price" name="price" value="<%= product.price %>" required>
                    </div>
                    <div class="form-group-addproduct">
                        <label for="color">Color:</label>
                        <input class="inp-addproduct" type="text" id="color" name="color" value="<%= product.color %>" required>
                    </div>
                    <div class="form-group-addproduct">
                        <label for="description">Description:</label><br>
                        <textarea class="inp-addproduct" id="description" name="description" rows="4" cols="50"  required><%= product.announce_details %></textarea>
                    </div>
                    <!-- <div class="form-group-addproduct">
                        <label for="image">Upload Image:</label>
                        <input class="inp-file-addproduct" type="file" id="image" name="image" accept="image/*" required>
                    </div> -->

                    <input type="hidden" name="productId" value="<%= product.id %>">
                    <div class="form-group-addproduct">
                        
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input class="inp-sub-addproduct-button" type="submit" value="Submit">
                    </div>
                </form>
            </div>
        </main>      


    </body>

    </html>

