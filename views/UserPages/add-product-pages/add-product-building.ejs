<%- include('../../includes/head')  %>
<link rel="stylesheet" href="/css/add-product.css">
<link rel="stylesheet" href="/css/navBarCss.css">
</head>
<body>
    <%- include('../../includes/nav-bar')  %> 
    
    <main>
        <div class="container-addproduct">
            <h1 class="h1-addproduct">Add building Listing</h1>
            <form class="form-add-building" action="submit_listing.php" method="POST" enctype="multipart/form-data">
                <div class="form-group-addproduct">
                    <label class="label-addproduct" for="make">Make:</label>
                    <input class="inp-addproduct" type="text" id="make" name="make" required>
                </div>
                <div class="form-group-addproduct">
                    <label for="model">Model:</label>
                    <input class="inp-addproduct" type="text" id="model" name="model" required>
                </div>
                <div class="form-group-addproduct">
                    <label for="year">Year:</label>
                    <input class="inp-addproduct" type="number" id="year" name="year" min="1900" max="2099" required>
                </div>
                <div class="form-group-addproduct">
                    <label for="mileage">Mileage (in miles):</label>
                    <input class="inp-addproduct" type="number" id="mileage" name="mileage" required>
                </div>
                <div class="form-group-addproduct">
                    <label for="price">Price ($):</label>
                    <input class="inp-addproduct" type="number" id="price" name="price" required>
                </div>
                <div class="form-group-addproduct">
                    <label for="description">Description:</label><br>
                    <textarea class="inp-addproduct" id="description" name="description" rows="4" cols="50" required></textarea>
                </div>
                <div class="form-group-addproduct">
                    <label for="image">Upload Image:</label>
                    <input class="inp-file-addproduct" type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group-addproduct">
                    <input class="inp-sub-addproduct" type="submit" value="Submit">
                </div>
            </form>
        </div>
    </main>
    
</body>
</html>
