    </head>

    <body>
        <%- include('../../includes/nav-bar'); %>
            <%- include('./includes/user-navbar'); %>
                <div class="container">
                    <% if(error){ %>
                        <h4 class="success-message">
                            <%= error %>
                        </h4>
                        <% } %>
                            <h2>Contact Us</h2>
                            <form action="/user/<%= user.id %>/help" method="post">
                                <input type="text" name="title" placeholder="Title" required>
                                <textarea name="message" placeholder="Message" rows="5" cols="30" required></textarea>
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="submit" value="Send Help Mail">
                            </form>
                </div>
    </body>

